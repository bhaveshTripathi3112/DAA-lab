#include <iostream>
using namespace std;
int binarysearch(int arr[],int n,int target){
    int low = 0 ; 
    int high = n-1;
    int count = 0;
     while(low<=high){
        int mid = low+(high-low)/2; 
        if(arr[mid] == target){
            count+=1;
            for(int i= mid-1 ;i>=low ; i--){
                if(arr[i] == target){
                    count+=1;
                }
                else{
                    break;
                }
            }
            for(int j = mid+1; j<=high ; j++){
                if(arr[j] == target ){
                    count +=1;
                }
                else{
                    break;
                }
            }
            break;
        }
        else if(arr[mid]< target){
            low=mid+1;
        }
        else{
            high = mid-1;
        }
     }
     return count;
}
int main()
{
    
    int n;
    cout<<"enter the size of array :";
    cin>>n;
    int arr[n];
    for(int i = 0 ; i<n ; i++)
    {
        cin>>arr[i];
    }
    int  target;
    cout<<endl<<"Enter the target element :";
    cin>>target;
    int ans;
    ans=binarysearch(arr,n,target);
    if(ans == 0){
        cout<<endl<<"element not found";
    }
    else{
        cout<<endl<<"element found";
        cout<<endl<<ans;
    }
}
